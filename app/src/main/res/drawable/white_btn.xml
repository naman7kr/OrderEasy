<shape android:shape="rectangle"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <corners android:radius="4dp" />
    <gradient
        android:angle="45"
        android:centerColor="#fff"
        android:endColor="#fff"
        android:startColor="#fff"
        android:type="linear"
        />
    <padding
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp" />

    <stroke
        android:width="1dp"
        android:color="#ff0000" />

</shape>
