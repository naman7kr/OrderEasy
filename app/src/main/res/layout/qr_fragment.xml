<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >


    <ImageView
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="200dp"
        android:id="@+id/about_us_image"
        android:src="@drawable/ic_about_us_background"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:text="ABOUT US"
        android:textColor="#c70739"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:id="@+id/about_us_scroll">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/about_us_text"
            android:text="@string/about_us2"
            android:layout_marginLeft="15dp"
            android:textColor="#000000"
            android:layout_marginRight="15dp"
            android:textStyle="italic"

            android:textSize="20sp"
            android:layout_below="@+id/about_us_image" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
