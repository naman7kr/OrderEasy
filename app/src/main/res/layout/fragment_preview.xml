<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <android.support.v7.widget.RecyclerView
    android:id="@+id/verticalRecyclerView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_above="@+id/bottom_btn_view"

    />
    <com.github.clans.fab.FloatingActionMenu
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/bottom_btn_view"
        android:id="@+id/cart_fam"
        >
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/cart_enter_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_add"
            fab:fab_label="Enter OTP"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/cart_scan_qr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_edit"
            fab:fab_label="Scan Qr"
            fab:fab_size="mini"
            />


    </com.github.clans.fab.FloatingActionMenu>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom_btn_view"
        android:background="#000"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Clear Cart"
            android:layout_weight="1"
            android:id="@+id/clear_cart_btn"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            />
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Place Order"
        android:layout_weight="1"
        android:id="@+id/place_order_btn"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        />
    </LinearLayout>

</RelativeLayout>
